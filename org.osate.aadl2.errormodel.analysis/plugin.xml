<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension
         id="FaultImpactMarker"
         name="Fault Impact Marker"
         point="org.eclipse.core.resources.markers">
      <super type="org.osate.aadl2.modelsupport.AadlObjectMarker"/>
      <persistent value="true"/>
   </extension>

   <extension
         id="FunctionalHazardMarker"
         name="Functional Hazard Marker"
         point="org.eclipse.core.resources.markers">
      <super type="org.osate.aadl2.modelsupport.AadlObjectMarker"/>
      <persistent value="true"/>
   </extension>

   <extension
         id="UnhandledFaultsMarker"
         name="Unhandled Faults Marker"
         point="org.eclipse.core.resources.markers">
      <super type="org.osate.aadl2.modelsupport.AadlObjectMarker"/>
      <persistent value="true"/>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.osate.aadl2.errormodel.analysis.category"
            name="%actionSet.label">
      </category>
      <command
            categoryId="org.osate.aadl2.errormodel.analysis.category"
            id="org.osate.aadl2.errormodel.analysis.fha"
            name="%FHA.label">
      </command>
      <command
            categoryId="org.osate.aadl2.errormodel.analysis.category"
            id="org.osate.aadl2.errormodel.analysis.arp4761FHA"
            name="%ARP4761FHA.label">
      </command>
      <command
            categoryId="org.osate.aadl2.errormodel.analysis.category"
            id="org.osate.aadl2.errormodel.analysis.milstd882FHA"
            name="%MILSTD882FHA.label">
      </command>
      <command
            categoryId="org.osate.aadl2.errormodel.analysis.category"
            id="org.osate.aadl2.errormodel.analysis.faultImpact"
            name="%FaultImpact.label">
      </command>
      <command
            categoryId="org.osate.aadl2.errormodel.analysis.category"
            id="org.osate.aadl2.errormodel.analysis.unhandledFaults"
            name="%UnhandledFaults.label">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.osate.aadl2.errormodel.analysis.handlers.FHAHandler"
            commandId="org.osate.aadl2.errormodel.analysis.fha">
         <enabledWhen>
            <or>
               <reference
                     definitionId="org.osate.core.isInstanceFileSelected">
               </reference>
               <with
                     variable="selection">
                  <and>
                     <count
                           value="1">
                     </count>
                     <iterate>
                        <instanceof
                              value="org.osate.aadl2.instance.ComponentInstance">
                        </instanceof>
                     </iterate>
                  </and>
               </with>
            </or>
         </enabledWhen>
      </handler>
      <handler
            class="org.osate.aadl2.errormodel.analysis.handlers.ARP4761FHAHandler"
            commandId="org.osate.aadl2.errormodel.analysis.arp4761FHA">
         <enabledWhen>
            <or>
               <reference
                     definitionId="org.osate.core.isInstanceFileSelected">
               </reference>
               <with
                     variable="selection">
                  <and>
                     <count
                           value="1">
                     </count>
                     <iterate>
                        <instanceof
                              value="org.osate.aadl2.instance.ComponentInstance">
                        </instanceof>
                     </iterate>
                  </and>
               </with>
            </or>
         </enabledWhen>
      </handler>
      <handler
            class="org.osate.aadl2.errormodel.analysis.handlers.MILSTD882FHAHandler"
            commandId="org.osate.aadl2.errormodel.analysis.milstd882FHA">
         <enabledWhen>
            <or>
               <reference
                     definitionId="org.osate.core.isInstanceFileSelected">
               </reference>
               <with
                     variable="selection">
                  <and>
                     <count
                           value="1">
                     </count>
                     <iterate>
                        <instanceof
                              value="org.osate.aadl2.instance.ComponentInstance">
                        </instanceof>
                     </iterate>
                  </and>
               </with>
            </or>
         </enabledWhen>
      </handler>
      <handler
            class="org.osate.aadl2.errormodel.analysis.handlers.FaultImpactHandler"
            commandId="org.osate.aadl2.errormodel.analysis.faultImpact">
         <enabledWhen>
            <or>
               <reference
                     definitionId="org.osate.core.isInstanceFileSelected">
               </reference>
               <with
                     variable="selection">
                  <and>
                     <count
                           value="1">
                     </count>
                     <iterate>
                        <instanceof
                              value="org.osate.aadl2.instance.ComponentInstance">
                        </instanceof>
                     </iterate>
                  </and>
               </with>
            </or>
         </enabledWhen>
      </handler>
      <handler
            class="org.osate.aadl2.errormodel.analysis.handlers.UnhandledFaultsHandler"
            commandId="org.osate.aadl2.errormodel.analysis.unhandledFaults">
         <enabledWhen>
            <or>
               <reference
                     definitionId="org.osate.core.isInstanceFileSelected">
               </reference>
               <with
                     variable="selection">
                  <and>
                     <count
                           value="1">
                     </count>
                     <iterate>
                        <instanceof
                              value="org.osate.aadl2.instance.ComponentInstance">
                        </instanceof>
                     </iterate>
                  </and>
               </with>
            </or>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="org.osate.aadl2.errormodel.analysis.fha"
            icon="icons/fha.png">
      </image>
      <image
            commandId="org.osate.aadl2.errormodel.analysis.arp4761FHA"
            icon="icons/fha.png">
      </image>
      <image
            commandId="org.osate.aadl2.errormodel.analysis.milstd882FHA"
            icon="icons/fha.png">
      </image>
      <image
            commandId="org.osate.aadl2.errormodel.analysis.faultImpact"
            icon="icons/FaultImpact.gif">
      </image>
      <image
            commandId="org.osate.aadl2.errormodel.analysis.unhandledFaults"
            icon="icons/UnhandledFaults.gif">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.osate.ui.semanticChecksMenu?after=emv2">
         <command
               commandId="org.osate.aadl2.errormodel.analysis.unhandledFaults">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="menu:org.osate.ui.safetyMenu?after=core">
         <command
               commandId="org.osate.aadl2.errormodel.analysis.fha">
         </command>
         <command
               commandId="org.osate.aadl2.errormodel.analysis.arp4761FHA">
         </command>
         <command
               commandId="org.osate.aadl2.errormodel.analysis.milstd882FHA">
         </command>
         <command
               commandId="org.osate.aadl2.errormodel.analysis.faultImpact">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.osate.ui.semanticChecksToolbar?after=emv2">
         <command
               commandId="org.osate.aadl2.errormodel.analysis.unhandledFaults">
            <!--
               Remove visibleWhen on the command when this bug is fixed:
               https://bugs.eclipse.org/bugs/show_bug.cgi?id=201589
            -->
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeWorkbenchWindow.activePerspective">
                  <equals
                        value="org.osate.ui.perspective.AadlPerspective">
                  </equals>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.osate.ui.safetyToolbar?after=core">
         <command
               commandId="org.osate.aadl2.errormodel.analysis.fha"
               style="pulldown">
            <!--
               Remove visibleWhen on the command when this bug is fixed:
               https://bugs.eclipse.org/bugs/show_bug.cgi?id=201589
            -->
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeWorkbenchWindow.activePerspective">
                  <equals
                        value="org.osate.ui.perspective.AadlPerspective">
                  </equals>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="org.osate.aadl2.errormodel.analysis.faultImpact"
               tooltip="%FaultImpact.toolTip">
            <!--
               Remove visibleWhen on the command when this bug is fixed:
               https://bugs.eclipse.org/bugs/show_bug.cgi?id=201589
            -->
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeWorkbenchWindow.activePerspective">
                  <equals
                        value="org.osate.ui.perspective.AadlPerspective">
                  </equals>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="menu:org.osate.aadl2.errormodel.analysis.fha">
         <command
               commandId="org.osate.aadl2.errormodel.analysis.fha">
         </command>
         <command
               commandId="org.osate.aadl2.errormodel.analysis.arp4761FHA">
         </command>
         <command
               commandId="org.osate.aadl2.errormodel.analysis.milstd882FHA">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.osate.ui.semanticChecksNavigatorPopup?after=emv2">
         <command
               commandId="org.osate.aadl2.errormodel.analysis.unhandledFaults">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.osate.ui.safetyNavigatorPopup?after=core">
         <command
               commandId="org.osate.aadl2.errormodel.analysis.fha">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
         <command
               commandId="org.osate.aadl2.errormodel.analysis.arp4761FHA">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
         <command
               commandId="org.osate.aadl2.errormodel.analysis.milstd882FHA">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
         <command
               commandId="org.osate.aadl2.errormodel.analysis.faultImpact">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
</plugin>
