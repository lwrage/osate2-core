package connection_not_active
public
	system s1
		modes
			m1: initial mode;
			m2: mode;
	end s1;
	
	system implementation s1.i1
		subcomponents
			sub1: bus;
			sub2: process ps1;
			sub3: process ps1;
		connections
			conn1: port sub2.f1 -> sub3.f1 {Actual_Connection_Binding => (reference (sub1));} in modes (m1);
	end s1.i1;
	
	process ps1
		features
			f1: in out data port;
	end ps1;
end connection_not_active;