<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension
         id="BinpackObjectMarker"
         name="Thread Binding Analysis Marker"
         point="org.eclipse.core.resources.markers">
      <super type="org.osate.aadl2.modelsupport.AadlObjectMarker"/>
      <persistent value="true"/>
   </extension>
   
   <extension
         id="ScheduleObjectMarker"
         name="Scheduling Analysis Marker"
         point="org.eclipse.core.resources.markers">
      <super type="org.osate.aadl2.modelsupport.AadlObjectMarker"/>
      <persistent value="true"/>
   </extension>
   
   <extension
         id="InversionObjectMarker"
         name="Priority Inversion Analysis Marker"
         point="org.eclipse.core.resources.markers">
      <super type="org.osate.aadl2.modelsupport.AadlObjectMarker"/>
      <persistent value="true"/>
   </extension>
   
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.osate.analysis.resource.management.category"
            name="%actionSet.label">
      </category>
      <command
            categoryId="org.osate.analysis.resource.management.category"
            id="org.osate.analysis.resource.management.checkPriorityInversion"
            name="%CheckPriorityInversion.label">
      </command>
      <command
            categoryId="org.osate.analysis.resource.management.category"
            id="org.osate.analysis.resource.management.schedule"
            name="%Schedule.label">
      </command>
      <command
            categoryId="org.osate.analysis.resource.management.category"
            id="org.osate.analysis.resource.management.binpack"
            name="%Binpack.label">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.osate.analysis.resource.management.handlers.CheckPriorityInversion"
            commandId="org.osate.analysis.resource.management.checkPriorityInversion">
         <enabledWhen>
            <or>
               <reference
                     definitionId="org.osate.core.isInstanceFileSelected">
               </reference>
               <with
                     variable="selection">
                  <and>
                     <count
                           value="1">
                     </count>
                     <iterate>
                        <instanceof
                              value="org.osate.aadl2.instance.SystemInstance">
                        </instanceof>
                     </iterate>
                  </and>
               </with>
            </or>
         </enabledWhen>
      </handler>
      <handler
            class="org.osate.analysis.resource.management.handlers.Schedule"
            commandId="org.osate.analysis.resource.management.schedule">
         <enabledWhen>
            <or>
               <reference
                     definitionId="org.osate.core.isInstanceFileSelected">
               </reference>
               <with
                     variable="selection">
                  <and>
                     <count
                           value="1">
                     </count>
                     <iterate>
                        <instanceof
                              value="org.osate.aadl2.instance.SystemInstance">
                        </instanceof>
                     </iterate>
                  </and>
               </with>
            </or>
         </enabledWhen>
      </handler>
      <handler
            class="org.osate.analysis.resource.management.handlers.Binpack"
            commandId="org.osate.analysis.resource.management.binpack">
         <enabledWhen>
            <or>
               <reference
                     definitionId="org.osate.core.isInstanceFileSelected">
               </reference>
               <with
                     variable="selection">
                  <and>
                     <count
                           value="1">
                     </count>
                     <iterate>
                        <instanceof
                              value="org.osate.aadl2.instance.SystemInstance">
                        </instanceof>
                     </iterate>
                  </and>
               </with>
            </or>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="org.osate.analysis.resource.management.checkPriorityInversion"
            icon="icons/inversion.gif"
            disabledIcon="icons/noInversion.gif">
      </image>
      <image
            commandId="org.osate.analysis.resource.management.schedule"
            icon="icons/schedule.gif"
            disabledIcon="icons/noSchedule.gif">
      </image>
      <image
            commandId="org.osate.analysis.resource.management.binpack"
            icon="icons/binpack.gif"
            disabledIcon="icons/noBinpack.gif">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.osate.ui.analysesMenu?after=org.osate.analysis.flows.checkFlowLatency">
         <menu
               id="org.osate.analysis.resource.management.schedulingMenu"
               label="Scheduling">
            <command
                  commandId="org.osate.analysis.resource.management.binpack">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="activeWorkbenchWindow.activePerspective">
                     <or>
                        <equals
                              value="org.osate.ui.perspective.AadlPerspective">
                        </equals>
                        <equals
                              value="org.osate.imv.ui.perspective.ImvPerspective">
                        </equals>
                     </or>
                  </with>
               </visibleWhen>
            </command>
            <command
                  commandId="org.osate.analysis.resource.management.checkPriorityInversion">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="activeWorkbenchWindow.activePerspective">
                     <or>
                        <equals
                              value="org.osate.ui.perspective.AadlPerspective">
                        </equals>
                        <equals
                              value="org.osate.imv.ui.perspective.ImvPerspective">
                        </equals>
                     </or>
                  </with>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.osate.ui.toolbar?after=org.osate.analysis.resource.budgets.doResourceBudget">
         <command
               commandId="org.osate.analysis.resource.management.binpack"
               tooltip="%Binpack.toolTip">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeWorkbenchWindow.activePerspective">
                  <or>
                     <equals
                           value="org.osate.ui.perspective.AadlPerspective">
                     </equals>
                     <equals
                           value="org.osate.imv.ui.perspective.ImvPerspective">
                     </equals>
                  </or>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="org.osate.analysis.resource.management.checkPriorityInversion"
               tooltip="%CheckPriorityInversion.toolTip">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeWorkbenchWindow.activePerspective">
                  <or>
                     <equals
                           value="org.osate.ui.perspective.AadlPerspective">
                     </equals>
                     <equals
                           value="org.osate.imv.ui.perspective.ImvPerspective">
                     </equals>
                  </or>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.osate.ui.aadlAnalysesPopupMenu?after=org.osate.importer.simulink.importExportModelsPopupMenu">
         <menu
               id="org.osate.analysis.resource.management.schedulingPopupMenu"
               label="Scheduling">
            <command
                  commandId="org.osate.analysis.resource.management.binpack">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="selection">
                     <iterate
                           operator="and"
                           ifEmpty="false">
                        <or>
                           <instanceof
                                 value="org.osate.aadl2.instance.SystemInstance">
                           </instanceof>
                           <adapt
                                 type="org.eclipse.core.resources.IFile">
                              <test
                                    property="org.eclipse.core.resources.contentTypeId"
                                    value="org.osate.core.instanceModelFile">
                              </test>
                           </adapt>
                        </or>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
            <command
                  commandId="org.osate.analysis.resource.management.schedule">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="selection">
                     <iterate
                           operator="and"
                           ifEmpty="false">
                        <or>
                           <instanceof
                                 value="org.osate.aadl2.instance.SystemInstance">
                           </instanceof>
                           <adapt
                                 type="org.eclipse.core.resources.IFile">
                              <test
                                    property="org.eclipse.core.resources.contentTypeId"
                                    value="org.osate.core.instanceModelFile">
                              </test>
                           </adapt>
                        </or>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
            <command
                  commandId="org.osate.analysis.resource.management.checkPriorityInversion">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="selection">
                     <iterate
                           operator="and"
                           ifEmpty="false">
                        <or>
                           <instanceof
                                 value="org.osate.aadl2.instance.SystemInstance">
                           </instanceof>
                           <adapt
                                 type="org.eclipse.core.resources.IFile">
                              <test
                                    property="org.eclipse.core.resources.contentTypeId"
                                    value="org.osate.core.instanceModelFile">
                              </test>
                           </adapt>
                        </or>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>
</plugin>
