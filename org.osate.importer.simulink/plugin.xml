<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension
         id="org.osate.importer.SimulinkImporterMarker"
         name="Simulink Importer Marker"
         point="org.eclipse.core.resources.markers">
      <super type="org.osate.aadl2.modelsupport.AadlObjectMarker"/>
      <persistent value="true"/>
   </extension>
   
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.osate.importer.simulink.doImportSimulink"
            name="Import Simulink model">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.osate.importer.simulink.handlers.DoImportModel"
            commandId="org.osate.importer.simulink.doImportSimulink">
         <enabledWhen>
            <with
                  variable="selection">
               <count
                     value="1">
               </count>
            </with>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="org.osate.importer.simulink.doImportSimulink"
            icon="icons/simulink.gif">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.osate.ui.analysesMenu?after=org.osate.analysis.resource.management.schedulingMenu">
         <menu
               id="org.osate.importer.simulink.importExportModelsMenu"
               label="Import/Export Models">
            <command
                  commandId="org.osate.importer.simulink.doImportSimulink">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="activeWorkbenchWindow.activePerspective">
                     <equals
                           value="org.osate.ui.perspective.AadlPerspective">
                     </equals>
                  </with>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.osate.ui.toolbar">
         <command
               commandId="org.osate.importer.simulink.doImportSimulink"
               tooltip="Import a Simulink model into AADL">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeWorkbenchWindow.activePerspective">
                  <equals
                        value="org.osate.ui.perspective.AadlPerspective">
                  </equals>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.osate.ui.aadlAnalysesPopupMenu?after=org.osate.analysis.flows.checkFlowLatency">
         <menu
               id="org.osate.importer.simulink.importExportModelsPopupMenu"
               label="Import/Export Models">
            <command
                  commandId="org.osate.importer.simulink.doImportSimulink"
                  label="Simulink model import">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="selection">
                     <iterate
                           operator="and"
                           ifEmpty="false">
                        <or>
                           <instanceof
                                 value="org.osate.aadl2.instance.SystemInstance">
                           </instanceof>
                           <adapt
                                 type="org.eclipse.core.resources.IFile">
                              <test
                                    property="org.eclipse.core.resources.contentTypeId"
                                    value="org.osate.core.instanceModelFile">
                              </test>
                           </adapt>
                        </or>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>
</plugin>
